<div class="snippets-container">
    <h1>Delete snippet</h1>
    <h2>Do you want to delete this snippet permanently?</h2>
    <div class="form-container">
        <form class="snippet-form" method="POST" action="/snippets/{{viewData.id}}/delete">
            <input type="hidden" name="id" value="{{viewData.id}}">
            <textarea name="code" cols="30" rows="10" readonly="readonly">{{viewData.code}}</textarea>
            <input type="submit" class="delete-btn" value="Delete">
        </form>
    </div>
</div>